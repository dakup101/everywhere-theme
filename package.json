{
  "name": "everywhere-theme",
  "version": "1.0.0",
  "description": "WP Theme by Everywhere",
  "main": "/src/ts/theme.ts",
  "scripts": {
    "dev": "npm-run-all --parallel webpack-watch tailwind-watch scss-watch",
    "build": "npm-run-all webpack tailwind scss",
    "webpack": "webpack --config webpack.config.prod.js",
    "webpack-watch": "webpack --config webpack.config.dev.js --watch",
    "scss": "postcss ./src/scss/custom.scss -o ./dist/css/custom.css",
    "scss-watch": "postcss ./src/scss/custom.scss -o ./dist/css/custom.css --watch",
    "tailwind": "tailwind -i ./src/scss/theme.scss -o ./dist/css/theme.css",
    "tailwind-watch": "tailwind -i ./src/scss/theme.scss -o ./dist/css/theme.css --watch"
  },
  "author": "Danylo Kupriienko (Everywhere Studio)",
  "license": "ISC",
  "devDependencies": {
    "@types/googlemaps": "^3.43.3",
    "@types/ion-rangeslider": "^2.3.2",
    "dotenv-webpack": "^8.0.1",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.1.2",
    "ts-loader": "^9.4.3",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.9.5",
    "webpack": "^5.87.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@types/select2": "^4.0.55",
    "@types/swiper": "^6.0.0",
    "animate.css": "^4.1.1",
    "archiver": "^5.3.1",
    "autoprefixer": "^10.4.7",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "fetch": "^1.1.0",
    "flatpickr": "^4.6.13",
    "form-data": "^4.0.0",
    "glightbox": "^3.2.0",
    "ion-rangeslider": "^2.3.1",
    "moment": "^2.29.4",
    "node-fetch": "^3.2.10",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^7.3.3",
    "postcss-nested": "^6.0.1",
    "postcss-nesting": "^11.3.0",
    "resize-observer-polyfill": "^1.5.1",
    "sass": "^1.50.1",
    "simple-parallax-js": "^5.6.2",
    "style-loader": "^3.3.3",
    "swiper": "^8.2.4",
    "terser-webpack-plugin": "^5.3.9",
    "typewriter-effect": "^2.20.1",
    "vanilla-rangeslider": "^1.0.0"
  }
}
